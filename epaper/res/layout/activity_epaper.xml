<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context=".Epaper" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Choose Epaper to Read " 
        android:id="@+id/textPrint"
        android:layout_weight="0.20"
                        android:background="@drawable/list_btn"
                        android:padding="8dp"
                         android:singleLine="true"
                     
                        android:textColor="@color/black"
                        android:textSize="12dp"
        />
	
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Vijay Karnataka"
        android:layout_below="@+id/textPrint"
        android:id="@+id/vk"
         android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/sms_green"
            android:padding="10dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:shadowColor="#ffffff"
            android:shadowDy="0.5" 
        />
     <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Prajavani"
        android:layout_below="@+id/vk"
        android:id="@+id/pr"
         android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/sms_green"
            android:padding="10dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:shadowColor="#ffffff"
            android:shadowDy="0.5" 
        />
      <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Kannada Prabha"
        android:layout_below="@+id/pr"
        android:id="@+id/kp"
         android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/sms_green"
            android:padding="10dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:shadowColor="#ffffff"
            android:shadowDy="0.5" 
        
        />
      <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Udaya Vani"
        android:layout_below="@+id/kp"
        android:id="@+id/uv"
         android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/sms_green"
            android:padding="10dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:shadowColor="#ffffff"
            android:shadowDy="0.5" 
        
        />
      <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sanje Vani"
        android:layout_below="@+id/uv"
        android:id="@+id/sv"
         android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/sms_green"
            android:padding="10dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:shadowColor="#ffffff"
            android:shadowDy="0.5" 
        />
      <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Times of India"
        android:layout_below="@+id/sv"
        android:id="@+id/tv"
         android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/sms_green"
            android:padding="10dp"
            android:textColor="#383838"
            android:textStyle="bold"
            android:shadowColor="#ffffff"
            android:shadowDy="0.5" 
        />
       
</RelativeLayout>